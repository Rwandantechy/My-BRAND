<!DOCTYPE html>
<html lang="en">
  <!--=================HEAD PART STARTS HERE==============================-->
  <%- include("./usersPartials/head.ejs")%>
  <!--=========================HEAD SECTION ENDS HERE=====================-->
  <body>
    <!--========================HEADER SECTION STARTS HERE=================-->
    <%- include("./usersPartials/header.ejs")%>
    <!--========================HEADER SECTION ENDS HERE====================-->
    <section class="content-section-admin">
      <aside class="side-menu-section">
        <div class="menu-item">
          <a href="/users/index.html" class="menu-link">
            <img
              class="menu-icon"
              src="/images/dashboard.png"
              alt="dashboard Icon"
            />
            <h2 class="menu-title">Dashboard</h2></a
          >
        </div>
        <div class="menu-item">
          <a href="/users/users.html" class="menu-link">
            <img class="menu-icon" src="/images/users.png" alt="Users Icon" />
            <h2 class="menu-title">All Users</h2></a
          >
        </div>
        <div class="menu-item">
          <a href="/users/projects.html" class="menu-link">
            <img
              class="menu-icon"
              src="/images/projects.png"
              alt="Projects Icon"
            />
            <h2 class="menu-title">Projects</h2></a
          >
        </div>
        <div class="menu-item">
          <a href="/users/articles.html" class="menu-link">
            <img
              class="menu-icon"
              src="/images/articles.png"
              alt="Articles Icon"
            />
            <h2 class="menu-title">Articles</h2></a
          >
        </div>

        <div class="menu-item">
          <a href="/users/comments.html" class="menu-link">
            <img
              class="menu-icon"
              src="/images/comments.png"
              alt="Comments Icon"
            />
            <h2 class="menu-title">Comments</h2></a
          >
        </div>
      </aside>
      <section class="uploading-article-project">
        <h1 class="orange-big-text project-article-title">
          You can Now post your Projects and hook Potential clients Today.
          Expertise matters!
        </h1>
        <div class="contact__form-container">
          <form action="#" class="contact__form" method="post">
            <input type="hidden" name="form-name" value="form 4" />
            <div class="contact__form-field fieldset-size">
              <input
                required
                type="text"
                class="contact__form-input fieldset-size"
                placeholder="Project Title"
                name="project-title"
                id="p-title"
              />
            </div>
            <div class="contact__form-field">
              <fieldset>
                <input
                  type="file"
                  name="picture"
                  class="contact__form-input fieldset-size"
                  id="picture-project"
                />
              </fieldset>
            </div>
            <div class="contact__form-field fieldset-size">
              <textarea
                required
                cols="30"
                rows="10"
                class="contact__form-input fieldset-size"
                placeholder="Type here Project descrptions"
                name="proj-descri-message"
                id="proj-descri-message"
              ></textarea>
            </div>
            <div class="contact__form-field fieldset-size">
              <input
                required
                type="text"
                class="contact__form-input fieldset-size"
                placeholder="Project Github Link"
                name="project-title"
                id="p-title"
              />
            </div>
            <div class="technologies-used">
              <h1 class="Technologies-title">
                Choose The Technologies for this Project:
              </h1>
              <div class="one-component">
                <input type="checkbox" id="option1" name="option1" value="1" />
                <label for="option1">HTML</label><br />
              </div>
              <div class="one-component">
                <input type="checkbox" id="option2" name="option2" value="2" />
                <label for="option2">NODE JS</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option3" name="option3" value="2" />
                <label for="option3"> JavaScript</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option4" name="option4" value="2" />
                <label for="option4"> Github</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option5" name="option5" value="2" />
                <label for="option5"> .NET Framework</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option6" name="option6" value="2" />
                <label for="option6"> Python</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option7" name="option7" value="2" />
                <label for="option7"> PHP</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option8" name="option8" value="2" />
                <label for="option8"> SQL Basics</label><br />
              </div>

              <div class="one-component">
                <input type="checkbox" id="option9" name="option9" value="2" />
                <label for="option9">Postgres Sql</label><br />
              </div>

              <div class="one-component">
                <input
                  type="checkbox"
                  id="option10"
                  name="option10"
                  value="2"
                />
                <label for="option10">JavaScript</label><br />
              </div>
            </div>

            <button type="submit" class="btn btn--theme contact__btn">
              Post
            </button>
          </form>
        </div>
        <div class="next-previous">
          <div class="one-component">
            <img
              src="/images/next.svg"
              alt="next icon"
              class="previous icon2"
            />
            <span class="orange-big-text" id="previous-slide">BACK</span>
          </div>
        </div>
      </section>
    </section>

    <!--==========================FOOTER PART STARTS HERE=====================-->
    <%- include("./usersPartials/footer.ejs")%>
    <!--=========================FOOTER SECTION ENDS HERE=====================-->

    <script src="/users/Javascript/main.js"></script>
  </body>
</html>
